{{> header}}
<div class="ui main text container">
<div class="ui huge header">BLOG APP</div>
<div class="ui top attached segment">
    <div class="ui divided items">
{{#each blogs}}
<div class="item">
    <div class="image">
<img src="{{image}}">    
    </div>
    <div class="content">
        <a class="header" href="/blogs/{{_id}}">{{title}}</a>
        <div class="meta"><span>{{created}}</span></div>
    </div>
     <div class="description">
    
    {{body}}
    </div>
<div class="extra">
    
    <a class="ui floated basic violet button" href="/blogs/{{_id}}">Read More<i class="right chevrom icon"></i></a>
    </div>
 
</div>
{{/each}}    
    </div>
    </div>

</div>


