<html><head><title>Blogapp</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css" type="text/css" rel="stylesheet">
    <link href="/css/style.css" type="text/css" rel="stylesheet">
    
    </head>
    
<body>
    <div class="ui fixed inverted menu">
    <div class="container">
        <div class="header item">
            <i class="icon comments"></i>
            BlogPost
        </div>
        </div>
    <a href="/" class="item">Home</a>
    <a href="/blogs/new" class="item">New Post</a>
        {{#if currentuser}}
        <a href="/logout" class="item">Logout</a>
        <a href="#" class="item">Signed in as {{currentuser.username}}</a>
        {{else}}
        <a href="/login" class="item">Login</a>
        <a href="/register" class="item">SignUp</a>
        {{/if}}
    </div>
 
    {{#if success}}
   <center>
    <div id="flash">
  <div class="ui positive basic button" id="width">
<p>{{success}}</p>
    </div>
        </div>
        </center>
{{else if error}}
       <center>
    <div id="flash">
  <div class="ui negative basic button" id="width">
<p>{{error}}</p>
    </div>
        </div>
        </center>
    {{/if}}