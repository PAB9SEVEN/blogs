{{> header}}
<div class="ui main text container">
<div class="ui huge header">
    {{blog.title}}
    <div class="ui top attached segment"> 
    <div class="item">
        <img src="{{blog.image}}" class="ui centered rounded image"> 
        <div class="content">
        <span>{{blog.created}}</span>
        </div>
        <div class="description">
        <p>{{blog.body}}</p></div>
        </div>
        <a href="/blogs/{{blog.id}}/edit" class="ui orange basic button">Edit Post</a>
        <form id="delete" method="POST" action="/blogs/{{blog.id}}?_method=DELETE">
           <BUTTON class="ui red basic button">Delete</BUTTON> 
        </form>
        <div class="container">
    <em>Submitted by {{blog.author.username}} </em>
        </div>
    <a href="/blogs/{{blog.id}}/comments/new" class="ui green basic button">Add comment</a>
    </div>
    
    {{#each blog.comments}}
<div class="ui message">
  <div class="header">
  <em><h5>By {{this.author.username}}</h5></em> 
  </div>
  <p>
     <h3> {{this.text}}</h3>
</p>
</div>
{{/each}}
    </div>

</div>

{{> footer}}